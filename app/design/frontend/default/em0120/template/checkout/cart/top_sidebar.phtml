/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */

?>
<div class="dropdown-cart no_quickshop" id="link-top-cart">
	<div class="dropdown-cart-content">
		<div class="dropdown-cart-content-top">
			<div class="block block-cart-top">
				<?php 
					$_cartQty = $this->getSummaryCount(); 
					if($_cartQty == null) $_cartQty = 0;
					if (!(Mage::app()->getRequest()->getControllerName()=='onepage') && !(Mage::app()->getRequest()->getControllerName()=='cart')) {
				        $quote = Mage::getSingleton('checkout/cart')->getQuote();
				        $quote->collectTotals();
				        $quote->getShippingAddress()->collectTotals();
				    }
			        $_subtotals = Mage::getSingleton('checkout/cart')->getQuote()->getTotals();					
        			$subtotal = $_subtotals["subtotal"]->getValue();
        			$total = Mage::helper('core')->formatPrice($subtotal);
			    ?>
				<div class="block-content">				
					<div class="summary block-title">
						<a class="amount" href="<?php echo $this->getUrl('checkout/cart') ?>">
							<span class="icon-cart"></span>
							<span class="cart-qty"><?php echo $_cartQty ?> <?php echo $this->__("item(s)")?></span>
						</a>
					</div>

					<div class="cart-popup" style="display:none">
						<div class="cart-popup-content">
							<p class="block-subtitle"><?php echo $this->__('Cart');?></p>
							<div class="content_cart">
								<p class="amount-content ">
									<?php if ($_cartQty==0): ?>
										<?php echo $this->__('You have no items in your shopping cart.') ?>
									<?php elseif ($_cartQty==1): ?>
										<?php echo $this->__('Existe <a href="%s">1 item</a> no seu carrinho.', $this->getUrl('checkout/cart')) ?>
									<?php else: ?>
										<?php echo $this->__('Existem <a href="%s">%s itens</a> em seu carrinho.', $this->getUrl('checkout/cart'), $_cartQty) ?>
									<?php endif ?>
								</p>
								<?php if ($_cartQty > 0): ?>
									<?php $_items = $this->getRecentItems() ?>
									<?php if(count($_items)): ?>								
										<ol id="cart-sidebar">
										<?php foreach($_items as $_item): ?>
											<?php echo $this->getItemHtml($_item) ?>
										<?php endforeach; ?>
										</ol>
										<script type="text/javascript">decorateList('cart-sidebar', 'none-recursive')</script>
									<?php endif ?>
								<?php endif ?>
							</div>
							<?php if($_cartQty && $this->isPossibleOnepageCheckout()): ?>
							<div class="actions">
								<?php echo $this->getChildHtml('extra_actions') ?>
								<p class="subtotal">
									<?php if ($this->canApplyMsrp()): ?>
										<span class="map-cart-sidebar-total"><?php echo $this->__('ORDER TOTAL WILL BE DISPLAYED BEFORE YOU SUBMIT THE ORDER'); ?></span>
									<?php else: ?>
										<span class="label"><?php echo $this->__('Subtotal do carrinho') ?></span><span class="total_price"> <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?>
										<?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?>
											<br />(<?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?> <?php echo Mage::helper('tax')->getIncExcText(true) ?>)
										<?php endif; ?>
									<?php endif; ?></span>
								</p>
								<button type="button" title="<?php echo $this->__('Checkout') ?>" class="button" onclick="window.location='<?php echo $this->getCheckoutUrl() ?>';"><span><span><?php echo $this->__('Checkout') ?></span></span></button>
								<a href="<?php echo $this->getUrl('checkout/cart') ?>" class="visible-xs visible-sm btn btn-default goto-cart"><?php echo $this->__('My Cart') ?></a>
							</div>
							<?php endif ?>
						
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
